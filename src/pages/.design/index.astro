---
import { getCollection } from 'astro:content';
import { formatIndex, formatDate } from "@/utils/format";
import BaseLayout from "@/layouts/BaseLayout.astro";
import Card from "@/components/entries/Card.astro";

const allBlogPosts = await getCollection('design');
allBlogPosts.sort((a, b) => Date.parse(b.data.date) - Date.parse(a.data.date));
---
<BaseLayout>
    { allBlogPosts.slice(0, 5).map((post, index) => 
    <section class="relative min-h-screen flex items-center justify-center overflow-hidden">
        <!-- Background Elements -->
        <div class="absolute inset-0 z-0">            
            <!-- High-resolution laptop image -->
            <img 
                src={post.data.photos[0]}
                alt={post.data.title}
                class="w-full h-full object-cover object-center"
                loading="eager"
            />
        </div>
            <!--  -->
        <div class="w-full h-100 px-12 flex flex-col sm:flex-row sm:items-center text-white">
            <!-- col -1  -->
            <div class="w-full h-screen flex flex-col z-10 justify-between">
                <div class="mt-24 w-32">
                    <h4 class="text-[20vw] leading-[0.8] font-bold tracking-tight">{formatIndex(index)}</h4>
                </div>
                <div class="mb-12 w-32">
                    <span class="text-sm font-semibold text-white">CLIENT â€”</span>
                    <h3 class="text-[7vw] leading-[0.9] font-black uppercase tracking-tighter">{post.data.brand}</h3>
                </div>
            </div>

            <!-- col-2 -->
            <div class="w-full h-screen flex flex-col z-10 justify-end items-end">
                <div class="flex flex-col mb-12 max-w-2xl">
                    <div class="text-sm uppercase font-medium text-white/80 pr-20">
                        <time>{formatDate(post.data.date)}</time> / {post.data.categories}
                    </div>
                    <h2 class="text-6xl text-white font-bold my-2 leading-tight tracking-tighter">
                        {post.data.title}
                    </h2>
                    <p class="text-xl font-serif mb-10 text-white/90 pr-20">
                        {post.data.description}
                    </p>
                    <a href={"/design/" + post.slug} class={"block w-full text-white text-xl font-semibold p-6 bg-" + post.data.color + "-600 hover:invert duration-300"}>Eexplore the Case</a>
                </div>
            </div>
        </div>
    </section>
    )}
    <section class="py-24 2xl:max-w-screen-xl mx-auto" id="gallery">
        <div class="px-8 pb-8 max-w-7xl mx-auto">
            <h2 class="w-full text-7xl tracking-tighter font-bold font-manrope leading-normal">Archived Cases</h2>
        </div>

        <div class="px-8 pb-8 max-w-7xl mx-auto grid gap-6 grid-cols-1 md:grid-cols-3">
          {allBlogPosts.slice(5).map((post: any) => 
            <Card title={post.data.title} description={post.data.description} date={post.data.date} href={post.slug} photos={post.data.photos} category="design" />
          )}
        </div>
    </section>
</BaseLayout>