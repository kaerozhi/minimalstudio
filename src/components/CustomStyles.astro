---
import '@fontsource-variable/outfit';
import '@fontsource-variable/playfair-display';
import '@fontsource-variable/rokkitt';
---

<style is:inline>
  :root {
    --font-sans: 'Outfit Variable', 'Noto Sans SC', 'Source Han Sans', ui-sans-serif, system-ui, sans-serif;
    --font-serif: 'Playfair Display Variable', 'Noto Seirf SC', 'Source Han Serif', ui-serif, serif;
    --font-fantasy: 'Rokkitt Variable', STFangsong, Fangsong, FangSong_GB2312, fantasy, serif;
    --font-cursive: 'Rokkitt Variable', Kaiti, STKaiti, cursive, serif;

    --color-primary: rgb(0, 0, 0);
    --color-secondary: rgb(235, 79, 12);
    --color-accent: rgb(36, 185, 22);

    --color-text-heading: rgb(0, 0, 0);
    --color-text-default: rgb(71, 71, 71);
    --color-text-muted: rgba(72, 72, 72, 0.6);

    --color-bg-page: rgb(255, 255, 255);
    --color-bg-page-dark: rgb(0, 0, 0);

    ::selection {
      background-color: var(--color-primary);
      color: var(--color-bg-page);
    }
  }

  .dark {
    --font-sans: 'Outfit Variable', 'Noto Sans SC', 'Source Han Sans', ui-sans-serif, system-ui, sans-serif;
    --font-serif: 'Playfair Display Variable', 'Noto Seirf SC', 'Source Han Serif', ui-serif, serif;
    --font-fantasy: 'Rokkitt Variable', STFangsong, Fangsong, FangSong_GB2312, fantasy, serif;
    --font-cursive: 'Rokkitt Variable', Kaiti, STKaiti, cursive, serif;

    --color-primary: rgb(0, 0, 0);
    --color-secondary: rgb(228, 53, 68);
    --color-accent: rgb(60, 233, 184);

    --color-text-heading: rgb(247, 248, 248);
    --color-text-default: rgb(229 236 246);
    --color-text-muted: rgb(229 236 246 / 50%);
    --color-bg-page: rgb(3 6 32);

    ::selection {
      background-color: black;
      color: snow;
    }
  }
</style>
