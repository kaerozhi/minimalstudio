---
import '@fontsource-variable/inter';
import '@fontsource-variable/lora';
import '@fontsource-variable/rokkitt';
---

<style is:inline>
  :root {
    --font-sans: 'InterVariable', 'Noto Sans SC', 'Source Han Sans', ui-sans-serif, system-ui, sans-serif;
    --font-serif: 'Lora Variable', 'Noto Seirf SC', 'Source Han Serif', ui-serif, serif;
    --font-fantasy: 'Rokkitt Variable', STFangsong, Fangsong, FangSong_GB2312, fantasy, serif;
    --font-cursive: 'Rokkitt Variable', Kaiti, STKaiti, cursive, serif;

    --color-primary: rgb(0, 0, 0);
    --color-secondary: rgb(96, 96, 96);
    --color-accent: rgb(60, 233, 184);

    --color-text-heading: rgb(0 0 0);
    --color-text-default: rgb(16 16 16);
    --color-text-muted: rgb(16 16 16 / 66%);
    --color-bg-page: rgb(255 255 255);

    --color-bg-page-dark: rgb(3 6 32);

    ::selection {
      background-color: rgb(0, 0, 0);
      color: rgb(255 255 255);
    }
  }

  .dark {
    --font-sans: 'InterVariable';
    --font-serif: 'InterVariable';
    --font-heading: 'InterVariable';

    --color-primary: rgb(0, 0, 0);
    --color-secondary: rgb(228, 53, 68);
    --color-accent: rgb(60, 233, 184);

    --color-text-heading: rgb(247, 248, 248);
    --color-text-default: rgb(229 236 246);
    --color-text-muted: rgb(229 236 246 / 66%);
    --color-bg-page: rgb(3 6 32);

    ::selection {
      background-color: black;
      color: snow;
    }
  }
</style>
