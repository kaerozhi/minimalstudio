---
import { formatDate } from "@/utils/format";
import { slugify } from "@/utils/slugify";
import Cover from "./Cover.astro";

const {
  title,
  href,
  date,
  description,
  photos = [],
  categories = [],
  tags = [],
  excerpt,
  index,
} = Astro.props;

const dateFormated = date ? formatDate(date) : "";
const hasImage = photos && photos.length > 0;
---
<article class="group w-full">
  <div class="relative overflow-hidden aspect-16/9 bg-white">
    {hasImage ? (
      <a href={href} class="block object-cover w-full h-full">
        <Cover photos={photos} title={title} />
      </a>
    ) : (
      /* 纯文字文章的“虚拟封面”：采用极简主义的排版设计 */
      <a href={href} class="block w-full h-full bg-white text-zinc-400 flex items-start justify-between p-8 transition-colors group-hover:bg-black group-hover:text-white">
        <div class="text-2xl font-semiBold tracking-tight">
          {excerpt}
        </div>
      </a>
    )}
  </div>

  <div class="p-2 sm:p-4">
    <div class="mt-2 md:w-5/6">
      <h2 class="text-lg sm:text-xl font-bold tracking-tight">
        <a href={href}>
          {title}
          {description && (
            <span class="font-normal text-zinc-500">
              {" "}
              {description}
            </span>
          )}
        </a>
      </h2>
    </div>

    <div class="mt-2 text-xs text-zinc-500 space-x-1">
      {categories.map((category) => (
        <a
          class="font-bold"
          href={`/category/${slugify(category)}`}
        >
          {category}
        </a>
      ))}
      {dateFormated && (
        <>
          <span>–</span>
          <time>{dateFormated}</time>
        </>
      )}
    </div>
  </div>
</article>